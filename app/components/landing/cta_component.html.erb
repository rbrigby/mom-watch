<section class="relative isolate overflow-hidden bg-gray-900">
  <div class="mx-auto max-w-7xl px-6 py-16 sm:py-24 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-3xl font-semibold tracking-tight text-white sm:text-4xl"><%= title %></h2>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a href="<%= cta_href %>" class="rounded-md bg-emerald-500 px-5 py-3 text-sm font-semibold text-white shadow-sm hover:bg-emerald-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-500">
          <%= cta_text %>
        </a>
      </div>
    </div>
  </div>
  <div class="pointer-events-none absolute inset-0 -z-10 bg-[radial-gradient(50rem_50rem_at_50%_-10rem,rgba(16,185,129,0.15),transparent)]"></div>
</section>


